<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Lsq的博客</title>
    <link rel="stylesheet" href="./bootstrap-3.3.7-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/main.css">
    <script>
            var blog = require('../app.js');
            var title = result.title;
        </script>
</head>
<body>
    <div class="navbar navbar-default"> 
        
        <div class="container">
                <div class="navbar-header">
                        <a  href="index.html" class="navbar-brand"></a>
                    </div>
                <div class="nav navbar-nav">
                    <li><a href="index.html">Lsq的博客</a></li>
                    <li><a href="write.html">写博客</a></li>
                    <li><a href="#">消息</a></li>
                    <li><a href="#">关于lsq</a></li>             
                </div>
                <div class="nav navbar-nav navbar-right">
                    <li><a href="login.html">登录</a></li>
                    <li><a href="siginup.html">注册</a></li>
                    
                </div>  
        </div>
      
    </div>

    <div class="container">
            <div class="row">
            <div class="col-sm-9">
                <div class="news-list">
                        <%contents.forEach(function (blog){%>
                    <div class="news-list-item clearfix">
                        <div class="col-xs-5">
                            <img src="./img/mongodb.jpg" alt="">
                        </div>
                        <a class="col-xs-7">
                            <a  href="#" class="title">
                                    <%= blog.title %>
                            </a>
                            <div class="info">
                                <span><span class="avatar"><img src="./img/LOGO.jpg"></span>廖绍强</span>
                                <span>25k</span>
                                <span>10分钟之前</span>
                                <div class="btn">
                                    <button><a href="delete?id= <%=blog.id%>">删除</a></button>
                                    <button><a href="update?id= <%=blog.id%>">更新</a></button>
                                </div>
                            </div>
                        </div>
                        <%});%>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="search-bar">
                            <input type="search" class="form-control" placeholder="搜索博客文章">

                    </div>
                    <div class="side-bar-card  flag clearfix">
                        <div class="col-xs-5">
                            <img src="./img/logo.png">
                            
                        </div>
                            <div class="col-xs-7">
                                    <div class="text-lg">Lsq的博客</div>
                                    <div>github：<a href="http://github.com/MooozzZ">github.com/MooozzZ</a></div>
                            </div>
                       

                    </div>
                    
                    </div>
            </div>
           
    </div>
</body>
</html>